{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "rootDir": "./",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [],
    "paths": {
      "@samples/*": [
        "./projects/samples/src/app/logo/*"
      ],
      "@logo-software/core": [
        "./dist/logo-software/core"
      ],
      "@logo-software/language": [
        "./dist/logo-software/language"
      ],
      "@logo-software/excel": [
        "./dist/logo-software/excel"
      ],
      "@logo-software/paging": [
        "./dist/logo-software/paging"
      ],
      "@logo-software/table": [
        "./projects/logo-software/table/src/public_api.ts",
        "./dist/logo-software/table"
      ],
      "@logo-software/*": [
        "./projects/logo-software/*"
      ],
      "@logo-software/toast": [
        "dist/logo-software/toast/logo-software-toast",
        "dist/logo-software/toast"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableIvy": false
  }
}
